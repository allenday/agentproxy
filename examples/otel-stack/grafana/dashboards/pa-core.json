{
  "title": "PA Core",
  "uid": "pa-core",
  "tags": ["agentproxy", "pa"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "time": {"from": "now-1h", "to": "now"},
  "panels": [
    {
      "type": "text",
      "title": "",
      "gridPos": {"h": 2, "w": 24, "x": 0, "y": 0},
      "options": {"mode": "markdown", "content": "**PA Core Metrics** - PA's internal state: sessions, tasks, decisions, verifications"}
    },
    {
      "type": "stat", "title": "Active Sessions",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 2},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [{"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "agentproxy_sessions_active or vector(0)", "refId": "A"}],
      "fieldConfig": {"defaults": {"unit": "none"}},
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}}
    },
    {
      "type": "stat", "title": "Tasks Started",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 2},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [{"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum(increase(agentproxy_tasks_started_total[$__range])) or vector(0)", "refId": "A"}],
      "fieldConfig": {"defaults": {"unit": "none"}},
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}}
    },
    {
      "type": "stat", "title": "Tasks Completed",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 2},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [{"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum(increase(agentproxy_tasks_completed_total[$__range])) or vector(0)", "refId": "A"}],
      "fieldConfig": {"defaults": {"unit": "none"}},
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}}
    },
    {
      "type": "stat", "title": "PA Decisions",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 2},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [{"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum(increase(agentproxy_pa_decisions_total[$__range])) or vector(0)", "refId": "A"}],
      "fieldConfig": {"defaults": {"unit": "none"}},
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}}
    },
    {
      "type": "timeseries", "title": "Task Duration",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "histogram_quantile(0.50, sum(rate(agentproxy_task_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p50", "refId": "A"},
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "histogram_quantile(0.95, sum(rate(agentproxy_task_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p95", "refId": "B"}
      ],
      "fieldConfig": {"defaults": {"unit": "s"}}
    },
    {
      "type": "timeseries", "title": "PA Reasoning Duration",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "histogram_quantile(0.50, sum(rate(agentproxy_pa_reasoning_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p50", "refId": "A"},
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "histogram_quantile(0.95, sum(rate(agentproxy_pa_reasoning_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p95", "refId": "B"}
      ],
      "fieldConfig": {"defaults": {"unit": "s"}}
    },
    {
      "type": "barchart", "title": "PA Decisions by Function",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [{"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum by (function) (increase(agentproxy_pa_decisions_total[$__range]))", "legendFormat": "{{function}}", "refId": "A"}]
    },
    {
      "type": "timeseries", "title": "Verifications",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "prometheus"}, "expr": "sum by (result) (increase(agentproxy_verifications_total[$__range]))", "legendFormat": "{{result}}", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"unit": "none"}}
    }
  ]
}
