# =============================================================================
# API Keys
# =============================================================================
GEMINI_API_KEY=XXXX

# =============================================================================
# Server Configuration (pa-server)
# =============================================================================
# Host to bind to (0.0.0.0 = all interfaces for distributed systems, 127.0.0.1 = localhost only)
AGENTPROXY_SERVER_HOST=0.0.0.0

# Port to bind to
AGENTPROXY_SERVER_PORT=8000

# =============================================================================
# OpenTelemetry Configuration
# =============================================================================
# Enable/disable telemetry collection (0 = disabled, 1 = enabled)
AGENTPROXY_ENABLE_TELEMETRY=0

# Service identification
OTEL_SERVICE_NAME=agentproxy
OTEL_SERVICE_NAMESPACE=default

# OTLP Exporter endpoint (collector address)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Protocol: grpc or http/protobuf
OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# Metric export interval in milliseconds
OTEL_METRIC_EXPORT_INTERVAL=10000

# Owner/user ID for multi-tenant tracking (defaults to $USER if not set)
# AGENTPROXY_OWNER_ID=alice

# =============================================================================
# Telemetry Data Privacy Controls
# =============================================================================
# Controls how task descriptions are exported to prevent sensitive data exposure
# Options: "none" (don't export), "hash" (hash only - default), "full" (⚠️ DANGEROUS - only for trusted internal systems)
AGENTPROXY_TELEMETRY_EXPORT_TASK_DESCRIPTIONS=hash

# Maximum length for task descriptions if exported (default: 100)
AGENTPROXY_TELEMETRY_MAX_TASK_LENGTH=100

# Custom sanitizer implementation (optional)
# Provide a Python module path to a class that implements BaseSanitizer
# Example: AGENTPROXY_CUSTOM_SANITIZER=mycompany.sanitizers.MySanitizer
# AGENTPROXY_CUSTOM_SANITIZER=
